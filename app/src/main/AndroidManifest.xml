<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.shredktp.trainschedulesrt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TrainScheduleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".initial_splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".show_schedule.MainActivity" />
        <activity android:name=".select_station.SelectStationActivity" />
        <activity android:name=".history_search.HistoryActivity" />
        <activity
            android:name=".offline_schedule.OfflineScheduleActivity"
            android:parentActivityName=".history_search.HistoryActivity" />
    </application>

</manifest>